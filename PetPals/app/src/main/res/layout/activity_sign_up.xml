<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/createacnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"/>

    <TextView
        android:id="@+id/createacnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="25sp"
        android:text="Create account for "
        android:textColor="@color/neutral600"
        app:layout_constraintBottom_toTopOf="@+id/signtocontinue"
        app:layout_constraintEnd_toStartOf="@+id/petpals"
        app:layout_constraintStart_toStartOf="@id/accountname" />

    <TextView
        android:id="@+id/petpals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Pet Pals,"
        android:textColor="@color/neutral600"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/signtocontinue"
        app:layout_constraintStart_toEndOf="@id/createacnt" />
    <TextView
        android:id="@+id/signtocontinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Sign up to get started!"
        android:fontFamily="@font/roboto"
        android:textColor="@color/neutral400"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintStart_toStartOf="@id/accountname"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/neutral600"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/accountname"
        app:layout_constraintStart_toStartOf="@id/accountname"/>
    <EditText
        android:id="@+id/accountname"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:hint="Type your user name"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:autofillHints="name"
        android:inputType="text"
        android:background="@drawable/login_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/neutral600"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/accountname"
        app:layout_constraintBottom_toTopOf="@id/acntemail"
        app:layout_constraintStart_toStartOf="@id/acntemail"/>

    <EditText
        android:id="@+id/acntemail"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Type your email"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/login_border"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/accountname"
        app:layout_constraintStart_toStartOf="@+id/accountname"
        app:layout_constraintTop_toBottomOf="@+id/email" />
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/neutral600"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/acntemail"
        app:layout_constraintBottom_toTopOf="@id/acntpass"
        app:layout_constraintStart_toStartOf="@id/acntpass"/>
    <EditText
        android:id="@+id/acntpass"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Type your password"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/login_border"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/acntemail"
        app:layout_constraintStart_toStartOf="@+id/acntemail"
        app:layout_constraintTop_toBottomOf="@+id/password" />
    <TextView
        android:id="@+id/cfpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/neutral600"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/acntpass"
        app:layout_constraintBottom_toTopOf="@id/acntcfpass"
        app:layout_constraintStart_toStartOf="@id/acntpass"/>
    <EditText
        android:id="@+id/acntcfpass"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/login_border"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/acntpass"
        app:layout_constraintStart_toStartOf="@+id/acntpass"
        app:layout_constraintTop_toBottomOf="@+id/cfpassword" />
    <Button
        android:id="@+id/signup"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:backgroundTint="@color/primary500"
        app:layout_constraintTop_toBottomOf="@id/acntcfpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/haveacnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account, "
        android:layout_marginTop="15dp"
        android:layout_marginStart="-50dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/primary500"
        app:layout_constraintStart_toEndOf="@+id/haveacnt"
        app:layout_constraintTop_toBottomOf="@+id/signup"/>
</androidx.constraintlayout.widget.ConstraintLayout>